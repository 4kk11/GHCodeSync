{
    "name": "GHCodeSync",
    "displayName": "GHCodeSync",
    "description": "VSCode extension for Grasshopper script component integration",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/connect.cmd",
        "onCommand:GHCodeSync.connect",
        "onCommand:GHCodeSync.disconnect",
        "onCommand:GHCodeSync.healthCheck"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "GHCodeSync.connect",
                "title": "Connect to Grasshopper"
            },
            {
                "command": "GHCodeSync.disconnect",
                "title": "Disconnect from Grasshopper"
            },
            {
                "command": "GHCodeSync.healthCheck",
                "title": "Health Check"
            }

        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "ws": "^8.x.x"
    },
    "devDependencies": {
        "@types/node": "^16.x.x",
        "@types/vscode": "^1.70.0",
        "@types/ws": "^8.x.x",
        "typescript": "^4.x.x"
    },
    "publisher": "4kk11",
    "repository": {
        "type": "git",
        "url": "https://github.com/4kk11/GHCodeSync"
    }
}
